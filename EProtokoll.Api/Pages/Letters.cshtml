@page
@model EProtokoll.Api.Pages.LettersModel

<h1>Letters</h1>

<table>
    <thead>
        <tr>
            <th>Protocol</th>
            <th>Type</th>
            <th>Classification</th>
            <th>Subject</th>
            <th>Status</th>
            <th>Created</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var letter in Model.Letters)
    {
        <tr>
            <td>@letter.ProtocolNumber</td>
            <td>@letter.Type</td>
            <td>@letter.Classification</td>
            <td>@letter.Subject</td>
            <td>@letter.Status</td>
            <td>@letter.CreatedAt.ToString("yyyy-MM-dd")</td>
        </tr>
    }
    </tbody>
</table>
