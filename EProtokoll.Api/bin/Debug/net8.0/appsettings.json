{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source=eprotokoll.db"
  },
  "Jwt": {
    "Issuer": "eprotokoll",
    "Audience": "eprotokoll",
    "Key": "ChangeThisKeyToASecretValue",
    "AccessTokenMinutes": 60,
    "RefreshTokenDays": 7
  },
  "Storage": {
    "RootPath": "Storage",
    "EncryptionKey": "ChangeThisStorageKeyToASecretValue"
  },
  "Alerts": {
    "IntervalSeconds": 300
  }
}
